               android:layout_height="wrap_content"
               android:src="@drawable/ic_action_play"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              tools:text="Trailer 1"
              android:id="@+id/trailer_title"
            />
</LinearLayout>